@model WebAppBibliotek.Models.Book

<form method="post" asp-action="Update">
    <input asp-for="_id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Redigera bok</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="_title"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="_author"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="_genre"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="_price"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="_title" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="_author" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="_genre" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="_price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-3 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-50" value="Redigera" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-50">Ångra</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
