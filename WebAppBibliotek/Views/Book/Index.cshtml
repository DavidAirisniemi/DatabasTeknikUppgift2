@model IEnumerable<WebAppBibliotek.Models.Book>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Biblioteket</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">Lägg till en bok</a> 
    </div>
</div>
<br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
               <thead>
                   <tr>
                       <th>
                           Titel
                       </th>
                       <th>
                           Författare
                       </th>
                       <th>
                           Genre
                       </th>
                       <th>
                           SEK
                       </th>
                   </tr>
               </thead>
               <tbody>
                  @foreach (Book book in Model)
                {
                   <tr>
                       <td width="35%">@book._title</td>
                       <td width="35%">@book._author</td>
                       <td width="35%">@book._genre</td>
                       <td width="35%">@book._price</td>
                       <td width="30%">
                           <div class="w-100 btn-group"role="group">
                               <a asp-controller="Book" asp-action="Update" asp-route-Id="@book._id" class="btn btn-primary mx-1">Uppdatera</a>
                               <a asp-controller="Book" asp-action="Delete" asp-route-Id="@book._id" class="btn btn-danger mx-1">Radera</a>
                           </div>
                       </td>                                        
                   </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>
<div class="d-flex justify-content-between">
    <div class="float-left">
        <form asp-action="Sort" asp-controller="Book">
            <label>Sort: </label>
            <select name="_sortTerm" onchange="this.form.submit()">
                <option value="">None</option>
                <option value="Fantasy">Fantasy</option>
                <option value="Sci-fi">Sci-Fi</option>
                <option value="Thriller">Thriller</option>
                <option value="Romance">Romance</option>
                <option value="Adventure">Adventure</option>
            </select>
        </form>
    </div>
</div>
<div class="d-flex justify-content-between">
    <div class="float-left">
        <form asp-action="SortAuthor" asp-controller="Book">
            <label>Sort: </label>
            <select name="_sortTerm" onchange="this.form.submit()">
                <option value="">None</option>
                <option value="AuthorAZ">Författare A-Z</option>
                <option value="AuthorZA">Författare Z-A</option>
            </select>
        </form>
    </div>
</div>